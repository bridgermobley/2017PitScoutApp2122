<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teamtators.com.a2122pitscout2017.Comments">

    <AutoCompleteTextView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtComments"
        android:hint="Comments"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescribeAuto"
        android:hint="Auto"
        android:layout_below="@+id/txtComments"
        android:layout_alignParentLeft="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can they cross the line?"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDescribeAuto"
        android:id="@+id/checkCross"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can They Delay Their Auto?"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkCross"
        android:id="@+id/checkDelay"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Gear?"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkDelay"
        android:id="@+id/checkGear"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoot Fuel?"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkGear"
        android:id="@+id/checkShoot"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activate hopper?"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkShoot"
        android:id="@+id/checkHopper"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick up balls?"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkHopper"
        android:id="@+id/checkPick"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDiscAuto"
        android:hint="Starting Position"
        android:layout_below="@+id/checkPick"
        android:layout_alignParentLeft="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Key?"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtDiscAuto"
            android:id="@+id/radioStartInKey"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next to loading station?"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/radioStartInKey"
            android:id="@+id/radioStartLoadingStation"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next to key?"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/radioStartLoadingStation"
            android:id="@+id/radioStartNextKey"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Middle?"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/radioStartNextKey"
            android:id="@+id/radioStartMiddle"
            />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/buttonFinish"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriver"
        android:hint="Driver:"
        android:layout_below="@+id/radioStartMiddle"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriverCurrent"
        android:hint="Amount of years driving:"
        android:layout_below="@+id/txtDriverThisYear"
        android:layout_alignParentLeft="true"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDriverCurrent">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio1Year"
            android:hint="1 Year"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio2Year"
            android:hint="2 Years"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio3Year"
            android:hint="3 Years"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio4Year"
            android:hint="4 Years"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio5Year"
            android:hint="5 Years"
            />

    </RadioGroup>

    <AutoCompleteTextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDriverThisYear"
        android:hint="Amount of time driver has had this year"
        android:layout_below="@+id/txtDriver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>


